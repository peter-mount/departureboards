BUILD_DIR=build
PACKAGE_DIR= $(BUILD_DIR)/package

DIRECTORIES = @DIRECTORIES@

.PHONY: all
all: $(DIRECTORIES)

.PHONY: clean
clean:
	rm -rf build

.PHONY: $(DIRECTORIES)
$(DIRECTORIES):
	@$(MAKE) --keep-going --directory=$@ $(MAKECMDGOALS)

.PHONY: $(MAKECMDGOALS)
$(MAKECMDGOALS): $(DIRECTORIES)

